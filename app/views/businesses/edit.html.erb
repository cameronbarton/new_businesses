<h1>Editing Business: <%= @business.title %></h1>

<%= form_for(@business) do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description, cols: 40, rows: 7 %>
  </p>
  <p>
    <%= f.label :website %><br/>
    <%= f.text_field :website %>
  </p>
  <p>
    <%= f.label :years_in_business %><br/>
    <%= f.date_field :years_in_business %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>